{
  "manifest_version": 3,
  "name": "YouTube to Obsidian Summarizer",
  "version": "0.1.0",
  "description": "Summarize YouTube transcripts with OpenRouter and save notes to Obsidian.",
  "permissions": ["activeTab", "scripting", "storage", "notifications"],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://openrouter.ai/*",
    "http://127.0.0.1/*"
  ],
  "icons": {
    "128": "icon-128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Summarize to Obsidian"
  },
  "options_page": "src/options/index.html",
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
