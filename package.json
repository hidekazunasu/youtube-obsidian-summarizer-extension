{
  "name": "youtube-obsidian-extension",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:chrome",
    "build:chrome": "node scripts/build-browser.mjs chrome",
    "build:firefox": "node scripts/build-browser.mjs firefox",
    "build:all": "node scripts/build-browser.mjs all",
    "package:release": "npm run build:all && node scripts/package-release.mjs",
    "release:check": "node scripts/release-check.mjs",
    "lint": "eslint src test",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.307",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "vite": "^6.0.0",
    "vitest": "^3.0.0"
  }
}
